<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fliptile.controller.GameViewController">
    <HBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Label fx:id="scoreLabel" text="Score: 0" />
        <Label fx:id="moveCountLabel" text="Moves: 0" />
    </HBox>

    <GridPane fx:id="tileGrid" hgap="10" vgap="10" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <!-- Tiles will be added dynamically in the controller -->
    </GridPane>

    <HBox spacing="10" alignment="CENTER" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <Button text="Reset Game" fx:id="resetButton" onAction="#resetGame" />
        <Button text="Main Menu" fx:id="mainMenuButton" onAction="#goToMainMenu" />
    </HBox>
</AnchorPane>

