<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.fliptile.model.GameBoard">
    <center>
        <!-- Game board layout here -->
        <GridPane fx:id="gameBoard">
            <!-- Tiles will be added dynamically -->
        </GridPane>
    </center>
    <top>
        <!-- Game info like score and move count -->
        <HBox>
            <Label fx:id="scoreLabel" text="Score: 0" />
            <Label fx:id="moveCountLabel" text="Moves: 0" />
            <!-- Other UI elements as needed -->
        </HBox>
    </top>
    <!-- Add other UI components like buttons as needed -->
</BorderPane>
